<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="net.kyouko.cloudier"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.CloudierApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/title.activity.main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.NotificationsActivity"
            android:label="@string/title.activity.notifications">
        </activity>
        <activity
            android:name=".ui.activity.FriendsActivity"
            android:label="@string/title.activity.friends">
        </activity>
        <activity
            android:name=".ui.activity.AuthActivity"
            android:label="@string/title.activity.auth">
        </activity>
        <activity
            android:name=".ui.activity.ImageActivity"
            android:label="@string/title.activity.image"
            android:theme="@style/ImageActivity">
        </activity>
    </application>

</manifest>
