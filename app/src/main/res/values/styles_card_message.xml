<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MessageCard_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MessageCard_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/message_card_title_height</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="MessageCard_Title_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MessageCard_Message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="MessageCard_Action_Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

</resources>
