<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TweetCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TweetCard_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TweetCard_Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_huge</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="TweetCard_Header_Avatar">
        <item name="android:layout_width">@dimen/avatar_size_normal</item>
        <item name="android:layout_height">@dimen/avatar_size_normal</item>
    </style>

    <style name="TweetCard_Header_NickName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="TweetCard_Header_Username">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <!-- TODO: This is a demo style for only 1 image. Should be edited for multiple images. -->
    <style name="TweetCard_Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TweetCard_Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="TweetCard_Actions_Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="TweetCard_Actions_Button_Start" parent="TweetCard_Actions_Button">
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
    </style>

    <style name="TweetCard_Actions_Button_Start_Most" parent="TweetCard_Actions_Button">
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="TweetCard_Actions_Button_End" parent="TweetCard_Actions_Button">
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
    </style>

    <style name="TweetCard_Actions_Button_End_Most" parent="TweetCard_Actions_Button">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TweetCard_Actions_Button_Retweet" parent="TweetCard_Actions_Button_Start_Most">
        <item name="android:src">@drawable/ic_retweet_black_24dp_54alpha</item>
    </style>

    <style name="TweetCard_Actions_Button_Comment" parent="TweetCard_Actions_Button_Start">
        <item name="android:layout_toEndOf">@+id/button_retweet</item>
        <item name="android:src">@drawable/ic_comment_black_24dp_54alpha</item>
    </style>

    <style name="TweetCard_Actions_Button_Favorite" parent="TweetCard_Actions_Button_End">
        <item name="android:src">@drawable/selector_favorite_button</item>
        <item name="android:layout_toStartOf">@+id/button_menu</item>
    </style>

    <style name="TweetCard_Actions_Button_Menu" parent="TweetCard_Actions_Button_End_Most">
        <item name="android:src">@drawable/ic_more_vert_black_24dp_54alpha</item>
    </style>

</resources>
