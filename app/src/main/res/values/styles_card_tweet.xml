<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TweetCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TweetCard_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TweetCard_Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_huge</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="TweetCard_Header_Avatar">
        <item name="android:layout_width">@dimen/avatar_size_normal</item>
        <item name="android:layout_height">@dimen/avatar_size_normal</item>
    </style>

    <style name="TweetCard_Header_NickName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="TweetCard_Header_Username">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <!-- TODO: This is a demo style for only 1 image. Should be edited for multiple images. -->
    <style name="TweetCard_Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TweetCard_Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="TweetCard_Actions_Button" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TweetCard_Actions_Button_Left" parent="TweetCard_Actions_Button">
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
    </style>

    <style name="TweetCard_Actions_Button_Left_Most" parent="TweetCard_Actions_Button">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TweetCard_Actions_Button_Right" parent="TweetCard_Actions_Button">
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
    </style>

    <style name="TweetCard_Actions_Button_Right_Most" parent="TweetCard_Actions_Button">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TweetCard_Actions_Button_Retweet" parent="TweetCard_Actions_Button_Left_Most">
        <item name="android:drawableLeft">@drawable/ic_retweet_black_24dp_54alpha</item>
        <item name="android:drawableStart">@drawable/ic_retweet_black_24dp_54alpha</item>
    </style>

    <style name="TweetCard_Actions_Button_Comment" parent="TweetCard_Actions_Button_Left">
        <item name="android:layout_toRightOf">@+id/button_retweet</item>
        <item name="android:drawableLeft">@drawable/ic_comment_black_24dp_54alpha</item>
        <item name="android:drawableStart">@drawable/ic_comment_black_24dp_54alpha</item>
    </style>

    <style name="TweetCard_Actions_Button_Favorite" parent="TweetCard_Actions_Button_Right">
        <item name="android:button">@drawable/selector_favorite_button</item>
        <item name="android:layout_toLeftOf">@+id/button_menu</item>
    </style>

    <style name="TweetCard_Actions_Button_Menu" parent="TweetCard_Actions_Button_Right_Most">
        <item name="android:drawableLeft">@drawable/ic_more_vert_black_24dp_54alpha</item>
        <item name="android:drawableStart">@drawable/ic_more_vert_black_24dp_54alpha</item>
    </style>

</resources>
