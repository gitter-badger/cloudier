<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TweetCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TweetCard_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TweetCard_Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_huge</item>
    </style>

    <style name="TweetCard_Header_Avatar">
        <item name="android:layout_width">@dimen/avatar_size_normal</item>
        <item name="android:layout_height">@dimen/avatar_size_normal</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
    </style>

    <style name="TweetCard_Header_Nickname">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_huge</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:paddingTop">@dimen/spacing_xxsmall</item>
        <item name="android:textAppearance">@style/MaterialText.Body2</item>
    </style>

    <style name="TweetCard_Header_Time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_huge</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textAppearance">@style/MaterialText.Body1</item>
        <item name="android:textColor">@color/black_54alpha</item>
    </style>

    <style name="TweetCard_Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TweetCard_ImageList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:scrollbars">horizontal</item>
    </style>

    <style name="TweetCard_ImageList_Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
    </style>

    <style name="TweetCard_Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/MaterialText.Body1</item>
    </style>

    <style name="TweetCard_Source">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="TweetCard_Source_Nickname">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/MaterialText.Body1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TweetCard_Source_Time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_xsmall</item>
        <item name="android:textAppearance">@style/MaterialText.Body1</item>
        <item name="android:textColor">@color/black_54alpha</item>
    </style>

    <style name="TweetCard_Source_Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/MaterialText.Body1</item>
    </style>

    <style name="TweetCard_Actions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TweetCard_Actions_Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="TweetCard_Actions_Button_Retweet" parent="TweetCard_Actions_Button">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:drawableStart">@drawable/ic_retweet_black_24dp_54alpha</item>
        <item name="android:drawablePadding">@dimen/spacing_xsmall</item>
    </style>

    <style name="TweetCard_Actions_Button_Comment" parent="TweetCard_Actions_Button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
        <item name="android:drawableStart">@drawable/ic_comment_black_24dp_54alpha</item>
        <item name="android:drawablePadding">@dimen/spacing_xsmall</item>
    </style>

</resources>
