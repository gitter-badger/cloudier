<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorAccent">@color/light_blue_500</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Load More Button -->
    <style name="LoadMoreButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_xlarge</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="LoadMoreButton_Wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LoadMoreButton_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

</resources>
